@import 'common/_typography'

#post-content
  typo-article()
  .date
    color: #999

.post-content-body
  padding: 24px 0 0

.post-content-header
  h2
    font-size: 42px
    line-height: 2
    font-weight: $bolderWeight

.post-content-footer
  margin-top: 2em
  border-top: 1px solid #ccc
  padding: 2em 0 2em
  position: relative
  justify-content: space-between
  align-items: center
  text-align: left
  font-family: $SansSerifFont
  display: flex
  flex-flow: row nowrap
  .next, .prev
    display: inline-block
  .next
      text-align: right
  label
      font-size: 16px

.comments-section
  margin-top: 5em
