$HeiFont = "PingFang SC", "Hiragino Sans GB", STHeiti, "Microsoft YaHei", "Wenquanyi Micro Hei", "WenQuanYi Micro Hei Mono", "WenQuanYi Zen Hei", "WenQuanYi Zen Hei Mono", LiGothicMed
$KaiFont = STKaiti, "AR PL UKai", "AR PL KaitiM GB", KaiTi, KaiTi_GB2312, "TW-Kai"
$SerifEn = 'Lora', Georgia, Cambria, "Times New Roman", Times, serif
$SansSerifEn = "Helvetica Neue", Helvetica, "Lucida Grande", "Luxi Sans", Arial
$ItalicEn = "LoraItalic", "Georgia Italic", "Georgia-Italic"
$CodeFont = Consolas, "Liberation Mono", "BitStream Vera Sans Mono", CourierNewPS-BoldMT, "Courier New", Courier, monospace

$SerifFont = $HeiFont, $SerifEn
$SansSerifFont = $HeiFont, $SansSerifEn
$ItalicFont = $ItalicEn, $KaiFont

$thinWeight = 200
$bolderWeight = 500
$boldWeight = 700

$wrapperWidth = 700px

word-wrap()
  word-wrap: arguments
  -ms-word-wrap: arguments

text-justify()
  text-justify: arguments
  -ms-text-justify: arguments

hyphens()
  -webkit-hyphens: arguments
  -moz-hyphens: arguments
  -ms-hyphens: arguments
  hyphens: arguments

ellipsis(no-wrap = true)
  if no-wrap
    white-space: nowrap
  overflow: hidden
  text-overflow: ellipsis

center()
  margin: 0 auto
  position: absolute
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)

underline()
  &:before
    content: ""
    position: absolute
    width: 100%
    height: 1px
    bottom: 0
    left: 0
    background-color: #555
    transform: scaleX(0)
    transition-duration: 0.2s
    transition-timing-function: ease-in-out
    transition-delay: 0s
  &:hover:before
    transform:scaleX(1)

typo-base()
  font: 18px/1.5 $SansSerifFont
  font-weight: $thinWeight

  blockquote, i, em, figcaption
    font-family: $ItalicFont
  strong, b, dt
    font-weight: $boldWeight
  code
    font-family: $CodeFont
    margin: 0.23em
  for i in 1..7
    h{i}
      font-family: $SansSerifFont
      font-weight: $thinWeight
      a
        text-decoration: none
  .underline
    underline()

  color: rgba(0, 0, 0, 0.8)
  text-rendering: optimizeLegibility
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  pre code
    margin: 0
  a
    text-decoration: none
    color: #000
  .hover-lighten
    opacity: 0.5
    &:active
    &:hover
      opacity: 1

typo-article()
  line-height: 2.0
  font-family: $SerifFont
  word-break: break-all
  hyphens(auto)
  p, pre, ul, ol, li, blockquote, table
    margin-bottom: 1em
    letter-spacing: 1px
  pre, code
    font-size: .9em
  a
    font-family: $ItalicFont
    position: relative
    underline()
    opacity: 0.75
    &:hover
    &:active
      opacity: 1
  em, i
    margin: .23em
  hr
    margin: 100px
    border: none
    border-bottom: 1px solid #ccc

  for i in 1..6
    h{i}
      margin: 0.23em 0px
      font-weight: $bolderWeight
      font-size: i*(-0.3em)+2.5
      a
        font-family: $SansSerifFont

  ul
    list-style: circle
  ol
    list-style: decimal
  ul, ol
    list-style-position: outside
    margin-left: 2em
  blockquote
    border-left: 3px solid #eee
    padding-left: 1em
    padding-top: 1em
    overflow-x: auto
  pre
    background: #f5f5f5
    padding: 0.8em 1.2em
    line-height: 1.3
    overflow: auto
    max-height: 20em
  img, iframe
    display: block
    max-width: 100%
    margin: 0 auto
  figcaption
    text-align: center
    font-size: 0.78em
    margin-top: 0.56em
    font-family: $ItalicFont

  table
    margin-left: auto
    margin-right: auto
    min-width: 60%
    line-height: 2em
    td, th
      padding: 0 0.3em
    thead, th
      font-weight: $boldWeight
    thead
      border-bottom: 1px solid #ddd
