@import 'common/_reset'
@import 'common/_typography'

html
  width: 100%
  height: 100%
  overflow: hidden
  font-size: 16px

body
  width: 100%
  height: 100%
  min-height: 100%
  min-width: 100%
  overflow: auto
  position: relative
  typo-base()

.main-wrapper
  min-width: 100%
  min-height: 100%
  display: flex
  flex-flow: column nowrap
  #main
    flex-grow: 1
    display: block;
    margin: 0 auto;
    padding: 64px 0;
    width: 60%;
    max-width: 700px;

::-webkit-scrollbar
  width: 5px
  height: 2px
  z-index: 1000

::-webkit-scrollbar-corner
  background: transparent

::-webkit-scrollbar-thumb
  background: #666
  border: none
  border-radius: 0

::-webkit-scrollbar-track
  background: transparent
  border: none
  border-radius: 0

@import 'common/_header'
@import 'common/_footer'
@import 'common/_responsive'