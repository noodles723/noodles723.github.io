@import 'common/_reset'
@import 'common/_typography'

html
  width: 100%
  height: 100%
  overflow: hidden
  font-size: 16px

body
  width: 100%
  height: 100%
  min-height: 100%
  min-width: 100%
  overflow: auto
  position: relative
  typo-base()

.main-wrapper
  min-width: 100%
  min-height: 100%
  display: flex
  flex-flow: column nowrap
  #main
    flex-grow: 1
    display: block;
    margin: 0 auto;
    padding: 64px 0;
    width: 60%;
    max-width: 700px;

@import 'common/_header'
@import 'common/_footer'
@import 'common/_responsive'