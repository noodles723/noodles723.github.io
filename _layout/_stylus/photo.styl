.main-wrapper>#main
  width:100%
  height:100%
  position: relative
  overflow: hidden
  margin: 0px
  padding: 0px
  max-width: 100%
  .loading
    position: absolute
    width: 100%
    text-align: center
    top: 50%
    margin: 0
    font-size: 24px
    color: rgba(0,0,0,.38)
    line-height: 1em
    span
      display: inline-block
    .one
      animation: loading 1.5s ease-out 0s infinite normal
    .two
      animation: loading 1.5s ease-out 0.15s infinite normal
    .three
      animation: loading 1.5s ease-out 0.3s infinite normal
  .asset, .photo
    position: absolute
    width: 100%
    height: 100%
    display: block
    overflow: hidden
  .asset
    top: 100%
    background: #fff
  .photo
    top: -100%
  img
    position: absolute
    min-width: 100%
    min-height: 100%
    left: 50%
    top: 50%
    transform: translate(-50%, -50%)
    transition: opacity .3s
    opacity: 1


#home-footer
  position: fixed
  margin: 0px 0px 1em

@keyframes loading
  0% {transform: translateY(0); }
  15% {transform: translateY(-15px); }
  30% {transform: translateY(0); }
  100% {transform: translateY(0); }