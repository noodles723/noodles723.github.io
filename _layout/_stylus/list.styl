article
  display: block
  margin: 0 auto
  padding: 7em 0
  width: 60%
  max-width: 700px
  ul
    list-style-type: none

.posts-list
  .post-hd
    color: #555
  .post-bd
    padding-top: 1em
  .title
    font-size: 1.67em
    line-height: 1.67em
  .date
    color: #999
  .post-item
    margin-bottom: 3em
    .title span
      position:relative
    a:hover
      .title span:before
        transform: scaleX(1)
  .cover
    height: 6.67em
    overflow: hidden
    position: relative
  .cover-wrapper
    position: absolute
    top: -100%
    bottom: -100%
    left: -50%
    right: -50%
    text-align: center
    img
      vertical-align: middle
      max-width: 50%
    .valign
      height: 100%
      width: 1px
      display: inline-block
      vertical-align: middle
  .description
    color: #555
    margin-top: .5em
  .post-eof
    display: block
    margin: 4em auto 4em
    width: 20%
    height: 1px
    background: #ccc
    text-align: center
  li:last-child
    .post-ft
      display: none
