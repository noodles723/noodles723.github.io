.main-wrapper>#main
  width: 70%
  margin: 96px auto
  text-align: left
  section
    padding-bottom: 48px
    border-bottom: 1px solid #eee
    .album-year
      font-size: 24px
      color: rgba(0,0,0,.54)
      letter-spacing: 2px;
      margin: 24px 0px
    .album-wrapper
      display: flex;
      flex-direction: row;
      justify-content: flex-start;

  .album
    width: 33%
    display: inline-block
    position: relative
    overflow: hidden
    &:before
      content: ""
      display: block
      width: 100%
      padding-top: 66.7%
      background: transparent
      pointer-events: none
    &:hover
      .overlay
        opacity: 1

    img
      position: absolute
      min-width: 100%
      min-height: 100%
      left: 50%
      top: 50%
      transform: translate(-50%, -50%)
      transition: opacity .3s
      opacity: 1
    .overlay
      position: absolute
      left: 0px
      top: 0px
      width: 100%
      height: 100%
      background: rgba(0,0,0,.54)
      opacity: 0
      transition: opacity .5s
      .name
        position: absolute
        width: 100%
        padding: 0px 24px
        text-align: center
        top: 50%
        left: 0px
        transform: translateY(-50%)
        color: #fff
        font-size: 24px
        max-height: 100%
        overflow: hidden
        font-weight: normal

.loading
  position: absolute
  width: 100%
  text-align: center
  top: 50%
  margin: 0
  font-size: 24px
  color: rgba(0,0,0,.38)
  line-height: 1em
  span
    display: inline-block
  .one
    animation: loading 1.5s ease-out 0s infinite normal
  .two
    animation: loading 1.5s ease-out 0.15s infinite normal
  .three
    animation: loading 1.5s ease-out 0.3s infinite normal

@keyframes loading
  0% {transform: translateY(0); }
  15% {transform: translateY(-15px); }
  30% {transform: translateY(0); }
  100% {transform: translateY(0); }