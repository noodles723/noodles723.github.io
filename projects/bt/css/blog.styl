#blog
  .blog-wrapper
    display flex
    flex-flow row wrap
    position relative
    .blog-item
      padding 24px
      width 50%
      min-width 250px
      align-items center
      p
        font-size 18px
        line-height 3em
        transition color .3s
        width 100%
        overflow hidden
        white-space nowrap
        text-overflow ellipsis
        text-align center
        margin-top 12px
      .image-wrapper
        width 100%
        height auto
        position relative
        overflow hidden
        &:after
          content ""
          width 100%
          padding-bottom 66.7%
          display block
        img
          position absolute
          width 100%
          height 100%
          left 0px
          top 0px
          transform-origin center
          transition transform .5s
      &:hover
        .image-wrapper img
          transform scale(1.2)
        p
          color: #66d37e
          text-decoration underline

@media (max-width: 600px)
  #blog .blog-wrapper
    .blog-item
      width 100%
      min-width 100%
      padding 0px
      p
        font-size 16px