h2
	width: fit-content;
	height: auto;
	line-height: 1.5em;
	margin: 64px auto;
	text-align: center;
	letter-spacing: 5px;
	position relative
	font-size 24px
	&:before
		content ""
		position absolute
		width 16px
		height 2px
		top 50%
		left -32px
		background rgba(0,0,0,.87)
	&:after
		content ""
		position absolute
		width 16px
		height 2px
		top 50%
		right -27px
		background rgba(0,0,0,.87)

@media (max-width: 600px)
	h2
		font-size 18px


